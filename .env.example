# 项目环境配置示例
# 请复制此文件为.env并填写实际值

# 环境选择（development 或 production）
# 修改这里切换开发/生产环境
NODE_ENV=development

# 开发环境配置
# 后端API配置
VITE_DEV_BACKEND_API_URL=http://localhost:3001

# Redis配置
VITE_DEV_REDIS_HOST=localhost
VITE_DEV_REDIS_PORT=6379
VITE_DEV_REDIS_PASSWORD=

# 前端应用配置
VITE_APP_TITLE=福软招生智能问答

# Coze API配置
VITE_COZE_AUTH_TOKEN=your_coze_auth_token_here
VITE_COZE_API_URL=https://api.coze.cn/v3/chat
VITE_COZE_BOT_ID=your_coze_bot_id_here
VITE_COZE_WORKFLOW_ID=your_coze_workflow_id_here

# 服务器配置
VITE_DEV_PORT=82

# 生产环境配置
# 后端API配置
VITE_PROD_BACKEND_API_URL=https://zswd.fzrjxy.com:4431

# Redis配置
VITE_PROD_REDIS_HOST=172.21.9.233
VITE_PROD_REDIS_PORT=6379
VITE_PROD_REDIS_PASSWORD=redisadmin

# 服务器配置
VITE_PROD_PORT=82

# SSL证书路径（生产环境）
VITE_PROD_SSL_CERT_PATH=/etc/letsencrypt/live/zswd.fzrjxy.com/fullchain.pem
VITE_PROD_SSL_KEY_PATH=/etc/letsencrypt/live/zswd.fzrjxy.com/privkey.pem

# 注意：系统会根据NODE_ENV自动加载对应的环境配置
# 只需修改NODE_ENV值即可切换整个环境配置